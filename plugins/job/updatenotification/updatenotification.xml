<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="plugin" group="system" method="upgrade">
	<name>plg_job_updatenotification</name>
	<author>Joomla! Project</author>
	<creationDate>July 2018</creationDate>
	<copyright>Copyright (C) 2005 - 2018 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.9.0</version>
	<description>PLG_JOB_UPDATENOTIFICATION_XML_DESCRIPTION</description>
	<files>
		<filename plugin="updatenotification">updatenotification.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB.plg_job_updatenotification.ini</language>
		<language tag="en-GB">en-GB.plg_job_updatenotification.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="cachetimeout"
					type="integer"
					label="PLG_JOB_UPDATENOTIFICATION_CACHETIMEOUT_LABEL"
					description="PLG_JOB_UPDATENOTIFICATION_CACHETIMEOUT_DESC"
					first="0"
					last="24"
					step="1"
					default="6"
					filter="int"
					validate="number"
				/>

				<field
					name="email"
					type="text"
					label="PLG_JOB_UPDATENOTIFICATION_EMAIL_LBL"
					description="PLG_JOB_UPDATENOTIFICATION_EMAIL_DESC"
					default=""
					size="40"
				/>

				<field
					name="language_override"
					type="language"
					label="PLG_JOB_UPDATENOTIFICATION_LANGUAGE_OVERRIDE_LBL"
					description="PLG_JOB_UPDATENOTIFICATION_LANGUAGE_OVERRIDE_DESC"
					default=""
					client="administrator"
					>
					<option value="">PLG_JOB_UPDATENOTIFICATION_LANGUAGE_OVERRIDE_NONE</option>
				</field>

				<field
					name="lastrun"
					type="hidden"
					default="0"
					size="15"
				/>

				<field
					name="unit"
					type="hidden"
					default="3600"
					filter="integer"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
